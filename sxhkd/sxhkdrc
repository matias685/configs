# terminal emulator
super + Return
	alacritty

# file manager
super + r
	alacritty -e ranger

# graphical file manager
super + shift + f
    pcmanfm

# web browser
super + shift + w
    firefox

# resource monitor
super + alt + h
	alacritty -e htop

# clipboard
alt + p
	clipmenu

# screen lock 
super + F12
    lock

# screenshot
super + shift + s
    scrot $HOME/Pictures/Screenshots/%Y-%m-%d-%H%M%S.png; notify-send 'Screenshot taken!'

# program launcher
super + @space
     rofi -show drun 
super + e
	rofi -show emoji
super + ctrl + q
     rofi -show power-menu -modi power-menu:rofi-power-menu

# increase gaps
super + z
	bspc config window_gap $(( $(bspc config window_gap) + 5 ))

super + shift + z
	bspc config window_gap $(( $(bspc config window_gap) - 5 ))

alt + 0
	bspc config window_gap 0
# hide bar
super + shift + b
	polybar-msg cmd hide; bspc config -m focused top_padding 0
super + b
	polybar-msg cmd show; bspc config -m focused top_padding 25

# kill bspwm
super + shift + q
  bspc quit

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config' 

#restart bspwm
super + shift + r
	bspc wm -r; notify-send 'bspwm' 'Reloaded config'

# close and kill a window
super + q
	bspc node -k
super + c
    bspc node -c

# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

# Enable multimedia keys
XF86AudioMute
    pactl set-sink-mute 0 toggle
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window


# Use PgUp and PgDown to switch between active workspaces
super + Next
    bspc desktop next.occupied -f
super + Prior
    bspc desktop prev.occupied -f

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Focus on window in direction
 super + {h,j,k,l}
 	bspc node -f {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# better resizing keys
alt + h
	bspc node -z right -20 0; bspc node -z left +20 0
alt + l
	bspc node -z right +20 0; bspc node -z left -20 0
alt + k
	bspc node -z top 0 +20; bspc node -z bottom 0 -20
alt + j
	bspc node -z top 0 -20; bspc node -z bottom 0 +20
