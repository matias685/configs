# MAIN SETTINGS
set $mod Mod4
set $term alacritty
font pango:Iosevka 12
default_border pixel 3
default_floating_border pixel 3
floating_modifier $mod

# GAPS
gaps inner 15
gaps outer 8

# COLOR SCHEME
# class                  border   backgr.  text     indic.   child_border
client.focused           #008080  #000000  #008080  #008080  #008080
client.focused_inactive  #222222  #000000  #888888  #222222  #222222
client.unfocused         #222222  #000000  #555555  #222222  #222222
client.urgent            #222222  #000000  #ff0000  #222222  #222222
client.placeholder       #222222  #000000  #000000  #222222  #222222
client.background        #000000


# VOLUME KEYS
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle


# WINDOW RULES
for_window [window_role="About"] floating enable
for_window [window_role="Sxiv"] floating enable
for_window [window_role="Pcsx2"] floating enable

# MAIN BINDINGS
bindsym $mod+Return exec --no-startup-id $term 
bindsym $mod+c kill
bindsym $mod+d exec --no-startup-id rofi -show drun -font "Iosevka 12" 
bindsym $mod+Ctrl+e exec --no-startup-id rofi -show emoji -modi emoji
bindsym $mod+q exec --no-startup-id rofi -show power-menu -modi power-menu:rofi-power-menu
bindsym $mod+p exec dmenu_run -h 26
bindsym $mod+r exec $term -e ranger
bindsym $mod+Shift+s exec --no-startup-id scrot $HOME/Pictures/Screenshots/%Y-%m-%d-%H%M%S.png
bindsym $mod+Ctrl+Shift+l exec --no-startup-id xlock
bindsym $mod+Shift+q exec pmenu

# Change gaps
bindsym $mod+z gaps inner current plus 5
bindsym $mod+Shift+z gaps inner current minus 5

# SCRATCHPAD
bindsym $mod+Shift+u move scratchpad
bindsym $mod+u scratchpad show

# WINDOW FOCUS
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+a focus parent

# WINDOW MOVEMENT
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# WORKPLACES
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Home workspace number $ws1
bindsym $mod+End workspace number $ws10
bindsym $mod+Prior workspace prev 
bindsym $mod+Next workspace next

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 
bindsym $mod+Shift+r restart
# exit i3 
bindsym $mod+Shift+e exec i3-msg exit

# RESIZE
bindsym $mod+Ctrl+j resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+k resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+l resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+h resize grow width 10 px or 10 ppt

# STATUSBAR
bar {
        position top
        status_command i3blocks
        font pango:Iosevka 12
        colors {
		background #181818
		separator #ebdbb2
		#<colorclass> <border> <background> <text>
		focused_workspace  #181818 #181818 #008080
		inactive_workspace #181818 #181818 #f8f8f2
		urgent_workspace   #cc241d #900000 #fb4934
        }
}

# Session initialization
exec --no-startup-id sh $HOME/.config/i3/initialize
