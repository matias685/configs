# AUTOSTART
# wallpaper set
exec_always --no-startup-id sh ~/.fehbg 
# picom
exec_always --no-startup-id picom --config /home/matias/.config/picom/picom.conf &
# notification daemon
exec_always --no-startup-id dunst &
# Reload Xresources
exec_always --no-startup-id xrdb ~/.Xresources


# SETTINGS
set $mod Mod4
font pango:Hack 10
gaps inner 20
gaps outer 0
default_border normal 2 px
default_border pixel 2
default_floating_border pixel 2


# COLOR SCHEME
#
# class                  border   backgr.  text     indic.   child_border
client.focused           #f8f8f2  #000000  #FFFFFF  #f8f8f2  #f8f8f2
client.focused_inactive  #222222  #000000  #888888  #222222  #222222
client.unfocused         #222222  #000000  #555555  #222222  #222222
client.urgent            #222222  #000000  #ff0000  #222222  #222222
client.placeholder       #222222  #000000  #000000  #222222  #222222
client.background        #000000


# VOLUME
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status


# WINDOW RULES
for_window [class="^Pcmanfm$"] floating enable
for_window [class="vlc"] floating enable
for_window [class="^Spotify$"] floating enable
for_window [window_role="About"] floating enable
for_window [class="^Gimp-2.10"] floating enable

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod


# KEY BINDINGS

bindsym $mod+Return exec alacritty
bindsym $mod+c kill

bindsym $mod+d exec rofi -show drun -font "Hack 12" 
bindsym $mod+Ctrl+e exec rofi -show emoji -modi emoji

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+t split t

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Home workspace number $ws1
bindsym $mod+End workspace number $ws10
bindsym $mod+Prior workspace prev 
bindsym $mod+Next workspace next

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 
bindsym $mod+F2 restart
# exit i3 
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
bindsym $mod+Ctrl+j resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+k resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+l resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+h resize grow width 10 px or 10 ppt

# STATUSBAR
bar {
        position top
        status_command i3blocks -c ~/.config/i3blocks/config 
        font pango:DejaVu Sans Mono 13
        colors {
		background #181818
		separator #ebdbb2
		#<colorclass> <border> <background> <text>
		focused_workspace  #181818 #f8f8f2 #181818
		inactive_workspace #181818 #181818 #f8f8f2
		urgent_workspace   #cc241d #900000 #fb4934
        }
}
